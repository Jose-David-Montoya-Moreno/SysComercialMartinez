@{
    ViewData["Title"] = "Index";
    SysComercialMartinez.EntidadesDeNegocio.Compra compra = ViewBag.Compras as SysComercialMartinez.EntidadesDeNegocio.Compra;
    List<SysComercialMartinez.EntidadesDeNegocio.Producto> productos = ViewBag.Producto as List<SysComercialMartinez.EntidadesDeNegocio.Producto>;
    List<SysComercialMartinez.EntidadesDeNegocio.DetalleCompra> ListaDetalle = ViewBag.ListaDetalle as List<SysComercialMartinez.EntidadesDeNegocio.DetalleCompra>;
}
<div class="row">
    <div id="miDiv" style=" text-align: justify;">
        <div class="container">
            <p class="ticket-header">Muebles Martinez</p>
            <img src="~/IMG/LogoMMsinFondo.png" class="ImagenTicket" />
            <p class="ticket-info">
                Dirección:Calle San Antonio del monte avenida monserrat<br>
                Teléfono: +503 70989762 <br>
                NIT: 123456789-0
            </p>
            <hr />

            <p class="ticket-info">
                Fecha:@compra.FechaCompra<br>
                N.Factura: @compra.NumeroCompra<br>
            </p>
            <hr />

           
        </div>

        <div>
            <table class="table">
                <thead>
                    <tr>


                        <th>
                            Producto
                        </th>
                        <th>
                            Descripción
                        </th>
                        <th>
                            Cantidad
                        </th>
                        <th>
                            Precio
                        </th>
                        <th>
                            ValorTotal
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ListaDetalle)
                    {
                        <tr>


                            <td>
                                @Html.DisplayFor(modelItem => item.Producto.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Producto.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cantidad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Producto.PrecioUnitario)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.ValorTotal)
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3"></td>
                        <td colspan="1">Total</td>
                        <td>
                            <b>  $ @compra.TotalPago</b>
                        </td>
                    </tr>

                </tfoot>
            </table>

        </div>
    </div>
    <div class="col-sm-4">
        <button class="btn btn-primary" onclick="imprimirDiv()"><i class="fa-solid fa-print" style="color: #ffffff;"></i> Imprimir</button>
    </div>
</div>
<script>
    function imprimirDiv() {
        var contenidoDiv = document.getElementById('miDiv').innerHTML;
        var ventanaImpresion = window.open('', '', 'width=600,height=600');
        ventanaImpresion.document.write('<style>@@page { margin: 0; }</style>');
        ventanaImpresion.document.write(contenidoDiv);
        ventanaImpresion.print();
    }
</script>

